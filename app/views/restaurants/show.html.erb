<p style="color: green"><%= notice %></p>

<h2>
  <strong><%= @restaurant.name %></strong>
</h2>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<br>

<p><strong>Reviews</strong></p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %>
    </li>
  <% end %>
</ul>

<%= link_to "+ Add new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
<%= link_to "Delete", review_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<br>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
